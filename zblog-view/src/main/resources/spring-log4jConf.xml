<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <description>
        Log4J initialization.  Configuration options are sourced from cas.properties.  This allows deployers to externalize
        both cas.properties and log4j.xml, so that a single *.war file can be deployed to multiple tiers or hosts without
        having to do any post configuration.  This approach helps to preserve configuration between upgrades.
        
        Deployers should not have to edit this file.
    </description>

     <bean id="log4jInitialization" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
         <property name="targetClass" value="org.springframework.util.Log4jConfigurer"/>
         <property name="targetMethod" value="initLogging"/>
         <property name="arguments">
             <list>
                 <value>#{env['log.conf']?:'classpath:/dev/log4j.properties'}</value>
                 <value>#{env['log4j.refresh.interval']?: 1000*60*5}</value>
             </list>
         </property>
    </bean>

</beans>
